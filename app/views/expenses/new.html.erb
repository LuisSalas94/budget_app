<%= form_with url: group_expenses_path, scope: :expense, method: :post do |f| %>
<nav class="new_tran_nav" >
  <div >
    <ul >
        <li >
        <%= link_to '<', "/groups/#{params[:group_id]}" %>
        </li>
    </ul>
    <a  href="#"><%= "NEW TRANSACTION" %></a>
  <%= f.submit 'Add' %>
  </div>
</nav>

  <%= f.text_field :name, required: true, placeholder: 'Name' %>
  <%= f.number_field :amount, step: 0.01, placeholder: 'Amount' %>
  <%= f.select :group_id, options_for_select(current_user.groups.map { |g| [g.name, g.id] }, selected: @group.id), {}%>
  <%= f.hidden_field :author_id, value: current_user.id %>
<% end %>